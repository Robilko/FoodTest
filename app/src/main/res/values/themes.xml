<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appPrimary</item>
        <item name="colorPrimaryVariant">@color/appPrimaryVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PlugTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/plug_text_size</item>
        <item name="android:layout_margin">@dimen/margin_8</item>
    </style>

    <style name="NoContentImage">
        <item name="android:layout_width">@dimen/main_menu_empty_list_image_size</item>
        <item name="android:layout_height">@dimen/main_menu_empty_list_image_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="tint">?attr/colorPrimaryVariant</item>
    </style>

</resources>